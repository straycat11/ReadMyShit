<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.PoemReaderActivity" android:id="@+id/readerConstraintLayout"
        android:backgroundTint="@android:color/darker_gray" android:backgroundTintMode="screen">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/poemReaderBg" app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <com.roasloa.readmyshit.Utilities.TypeWriter
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/poemReaderContent"
                    app:layout_constraintTop_toBottomOf="@+id/writingReaderTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textAlignment="center" android:fontFamily="@font/scope_one"
                    android:paddingStart="1dp"
                    tools:text="dfdsgs"
                    android:shadowColor="@android:color/background_light"
                    android:shadowDx="-1" android:shadowDy="1" android:shadowRadius="2"
                    android:textColor="@android:color/black" android:paddingTop="20dp"/>
        </LinearLayout>
    </ScrollView>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/writingReaderTitle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:paddingTop="15dp" android:textAlignment="center"
            android:textColor="@android:color/background_light" android:background="@color/colorPrimary"
            android:textStyle="bold"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:src="@tools:sample/avatars"
            android:id="@+id/poemReaderBg" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/writingReaderTitle" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"/>

</android.support.constraint.ConstraintLayout>